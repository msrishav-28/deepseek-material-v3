[run]
# Coverage.py configuration for Ceramic Armor Discovery Framework

# Source code to measure
source = ceramic_discovery

# Omit these files/directories from coverage
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
    */dist-packages/*
    */venv/*
    */env/*
    */.tox/*
    */setup.py
    */conftest.py

# Enable branch coverage
branch = True

# Parallel mode for multiprocessing
parallel = False

[report]
# Reporting options

# Show missing lines
show_missing = True

# Skip covered files
skip_covered = False

# Skip empty files
skip_empty = True

# Precision for coverage percentage
precision = 2

# Exclude lines from coverage
exclude_lines =
    # Standard pragma
    pragma: no cover
    
    # Don't complain about missing debug code
    def __repr__
    def __str__
    
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:
    
    # Don't complain about abstract methods
    @abstractmethod
    @abc.abstractmethod
    
    # Don't complain about protocol methods
    @protocol
    
    # Don't complain about pass statements
    pass
    
    # Don't complain about ellipsis
    \.\.\.

# Ignore errors
ignore_errors = False

# Sort results
sort = Cover

[html]
# HTML report options
directory = htmlcov
title = Ceramic Armor Discovery - Coverage Report

[xml]
# XML report options (for CI/CD)
output = coverage.xml

[json]
# JSON report options
output = coverage.json
pretty_print = True
show_contexts = True
